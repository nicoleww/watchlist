<%- include('partials/header') %>

<div class="container-list">
    <h2>Create New Watchlist</h2>
    <form action="/users/new" method="POST">
        <h3>Title:</h3><input type="text" name="title">
        <input type="submit" value="Create" class="save-btn">
    </form>
<div class="list-contain">
    <% for (let list of myLists) { %>
        <div class="list-card">
        <a href="/users/list/<%= list.id %>">
            <img src="/images/reel.png" class="reel">
        <div class="list-items">
        <h3><%= list.title %></a></h3>
        <form action="/users/delete/<%= list.id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn-delete"><img src="/images/delete-icon.png"></button>
        </form>
        </div>
        </div>
    <% } %>
</div>
</div>

<%- include('partials/footer') %>